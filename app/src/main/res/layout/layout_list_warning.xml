<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal"
    android:layout_marginVertical="1dp"
    android:background="@color/black_alternative"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:backgroundTint="@color/black_alternative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <ImageView
            android:src="@drawable/baseline_bg_warning70dp"
            android:id="@+id/warningImageBg"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ImageView>



        <RelativeLayout
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginHorizontal="10dp"
                android:id="@+id/warningImage"
                android:src="@drawable/baseline_lamb"
                android:scaleType="fitXY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </ImageView>

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/warningText"
                android:layout_toRightOf="@+id/warningImage"
                android:textSize="14sp"
                android:textColor="@color/white_alternative"
                android:text="The main door of the building is open"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:id="@+id/warningTime"
                android:layout_below="@id/warningText"
                android:layout_toRightOf="@+id/warningImage"
                android:textSize="12sp"
                android:textColor="@color/white_alternative"
                android:text="1 minute left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

        </RelativeLayout>

    </FrameLayout>
</androidx.cardview.widget.CardView>